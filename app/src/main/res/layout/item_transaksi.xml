<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp">
    <LinearLayout
        android:id="@+id/item_selected_makan_minum"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transaksi_nama_makan_minum"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/transaksi_harga_makan_minum"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/transaksi_jumlah_makan_minum"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/transaksi_total_makan_minum"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>