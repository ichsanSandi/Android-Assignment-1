<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/konsumen_beli_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beli Makanan"/>

    <Button
        android:id="@+id/konsumen_beli_minuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beli Minuman" />

    <Button
        android:id="@+id/konsumen_isi_ovo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi Ovo"/>
    <LinearLayout
        android:id="@+id/item_selected_makan_minum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Pesanan"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:text="Harga" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:text="Jumlah" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:text="Total" />


    </LinearLayout>

    <TextView
        android:id="@+id/foodText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makanan" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transaksi_recyclerView_pesanan"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/drinkText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minuman" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalText"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:text="TOTAL" />
        <TextView
            android:id="@+id/transaksi_total_makan"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:text="TOTAL" />
    </LinearLayout>

    <TextView
        android:id="@+id/konsumen_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status" />

</LinearLayout>